<Window x:Class="_2doflagi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2DOF Robot Arm Controller" Height="614" Width="800"
        Loaded="Window_Loaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <GroupBox Header="Servo 0" Grid.Row="0" Grid.Column="0" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderServo0" Minimum="0" Maximum="180" Value="90"
                            Tag="0"
                            ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Sudut" Width="50"/>
                        <TextBox x:Name="txtSudut0" Width="50" Text="90"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox x:Name="txtMin0" Width="60" Text="620" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox x:Name="txtMaks0" Width="60" Text="2430" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtInterp0" Width="60" Text="1570" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Servo 2" Grid.Row="0" Grid.Column="1" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderServo2" Minimum="-90" Maximum="90" Value="0"
                            Tag="2"
                            ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Sudut" Width="50"/>
                        <TextBox x:Name="txtSudut2" Width="50" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox x:Name="txtMin2" Width="60" Text="660" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox x:Name="txtMaks2" Width="60" Text="2450" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtInterp2" Width="60" Text="1483" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Servo 3" Grid.Row="0" Grid.Column="2" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderServo3" Minimum="-90" Maximum="90" Value="0"
                            Tag="3"
                            ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Sudut" Width="50"/>
                        <TextBox x:Name="txtSudut3" Width="50" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox x:Name="txtMin3" Width="60" Text="650" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox x:Name="txtMaks3" Width="60" Text="2428" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtInterp3" Width="60" Text="1550" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>


            <GroupBox Header="Jepit" Grid.Row="1" Grid.Column="2" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderJepit" Minimum="0" Maximum="200" Value="140"
                            ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="mm" Width="50"/>
                        <TextBox x:Name="txtJepitMM" Width="50" Text="140"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox x:Name="txtMinJepit" Width="60" Text="2122" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox x:Name="txtMaksJepit" Width="60" Text="1044" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtInterpJepit" Width="60" Text="1583" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Button x:Name="BtnClaw_Open" Content="Open Claw" Width="100" Click="BtnClaw_Open_Click"/>
                        <Button x:Name="BtnClaw_Close" Content="Close Claw" Width="100" Margin="5,0,0,0" Click="BtnClaw_Close_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="COM PORT" Width="80"/>
                    <ComboBox x:Name="cmbPorts" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button x:Name="btnConnect" Content="Connect" Width="100" Click="BtnConnect_Click"/>
                    <Button x:Name="btnClosePort" Content="Close Port" Width="100" Margin="5,0,0,0" Click="BtnClose_Click"/>
                </StackPanel>
                <Button x:Name="btnOrigin" Content="Origin Position" Height="40" Width="200" Margin="0,5" Click="BtnOrigin_Click"/>
            </StackPanel>

            <GroupBox Header="Robot Parameter" Grid.Row="1" Grid.Column="1" Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="a1 (mm)" Width="60"/>
                        <TextBox x:Name="m_a1" Width="50" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="a2 (mm)" Width="60"/>
                        <TextBox x:Name="m_a2" Width="50" Text="0"/>
                    </StackPanel>

                    <Label Content="Forward Kinematic Result" FontWeight="Bold" Margin="0,10,0,2"/>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Px" Width="40"/>
                        <TextBox x:Name="m_px" Width="80" Text="0.0" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Py" Width="40"/>
                        <TextBox x:Name="m_py" Width="80" Text="0.0" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Inverse Kinematic" Grid.Row="2" Grid.ColumnSpan="3" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="5">
                        <Label Content="Solusi 1 (Elbow Up)" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 1 (°)" Width="60"/>
                            <TextBox x:Name="m_satu" Width="60" Text="0" IsReadOnly="True" Background="#EEE"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 2 (°)" Width="60"/>
                            <TextBox x:Name="m_dua" Width="60" Text="0" IsReadOnly="True" Background="#EEE"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Button x:Name="cal_inv1" Content="Calculate" Width="80" Click="cal_inv1_Click" />
                            <Button x:Name="run_inv1" Content="Run" Width="80" Margin="5,0,0,0" Click="run_inv1_Click" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5">
                        <Label Content="Solusi 2 (Elbow Down)" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 1 (°)" Width="60"/>
                            <TextBox x:Name="m_satu1" Width="60" Text="0" IsReadOnly="True" Background="#EEE"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 2 (°)" Width="60"/>
                            <TextBox x:Name="m_dua2" Width="60" Text="0" IsReadOnly="True" Background="#EEE"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Button x:Name="cal_inv2" Content="Calculate" Width="80" Click="cal_inv2_Click"/>
                            <Button x:Name="run_inv2" Content="Run" Width="80" Margin="5,0,0,0" Click="run_inv2_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="5">
                <Button x:Name="btnExit" Content="Exit" Width="80" Margin="5" Click="BtnExit_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="80" Margin="5" Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
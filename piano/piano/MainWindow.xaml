<Window x:Class="piano.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Piano"
        Height="820" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid Margin="10">
        <!-- ==================== LAYOUT GRID ==================== -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Chart + Control -->
            <RowDefinition Height="Auto" />
            <!-- Initialization -->
            <RowDefinition Height="Auto" />
            <!-- Robot Control -->
            <RowDefinition Height="Auto" />
            <!-- Exit -->
        </Grid.RowDefinitions>

        <!-- ==================== GRAFIK (LIVECHARTS) ==================== -->
        <Border Grid.Column="0" Grid.Row="0"
                BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="5"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                ClipToBounds="True" Margin="0,0,10,5">
            <lvc:CartesianChart x:Name="robotChart"
                                Width="700" Height="335"
                                Background="White"
                                Hoverable="True"
                                Zoom="Xy" Pan="Xy"
                                DisableAnimations="False"
                                AnimationsSpeed="0:0:0.5"
                                DataTooltip="{x:Null}">

                <!-- SERIES -->
                <lvc:CartesianChart.Series>
                    <!-- Trajectory Path -->
                    <lvc:LineSeries x:Name="trajectorySeries"
                                    Title="Trajectory"
                                    Values="{Binding TrajectoryPoints}"
                                    Stroke="OrangeRed"
                                    StrokeThickness="2"
                                    Fill="Transparent"
                                    PointGeometry="{x:Null}"
                                    LineSmoothness="0" />

                    <!-- Robot Arm Links -->
                    <lvc:LineSeries x:Name="link1Series"
                                    Title="Link 1"
                                    Values="{Binding Link1Points}"
                                    Stroke="Black"
                                    StrokeThickness="3"
                                    Fill="Transparent"
                                    PointGeometry="{x:Null}" />

                    <lvc:LineSeries x:Name="link2Series"
                                    Title="Link 2"
                                    Values="{Binding Link2Points}"
                                    Stroke="DarkBlue"
                                    StrokeThickness="3"
                                    Fill="Transparent"
                                    PointGeometry="{x:Null}" />

                    <lvc:LineSeries x:Name="link3Series"
                                    Title="Link 3"
                                    Values="{Binding Link3Points}"
                                    Stroke="Red"
                                    StrokeThickness="3"
                                    Fill="Transparent"
                                    PointGeometry="{x:Null}" />

                    <!-- Joint Points -->
                    <lvc:ScatterSeries x:Name="baseSeries"
                                       Title="Base"
                                       Values="{Binding BasePoint}"
                                       Stroke="Black"
                                       StrokeThickness="2"
                                       Fill="Gray"
                                       PointGeometry="{x:Static lvc:DefaultGeometries.Circle}"
                                       MaxPointShapeDiameter="10"
                                       MinPointShapeDiameter="10" />

                    <lvc:ScatterSeries x:Name="elbowSeries"
                                       Title="Elbow"
                                       Values="{Binding ElbowPoint}"
                                       Stroke="DarkBlue"
                                       StrokeThickness="2"
                                       Fill="LightBlue"
                                       PointGeometry="{x:Static lvc:DefaultGeometries.Circle}"
                                       MaxPointShapeDiameter="8"
                                       MinPointShapeDiameter="8" />

                    <lvc:ScatterSeries x:Name="wristSeries"
                                       Title="Wrist"
                                       Values="{Binding WristPoint}"
                                       Stroke="DarkRed"
                                       StrokeThickness="2"
                                       Fill="LightCoral"
                                       PointGeometry="{x:Static lvc:DefaultGeometries.Circle}"
                                       MaxPointShapeDiameter="8"
                                       MinPointShapeDiameter="8" />

                    <lvc:ScatterSeries x:Name="endEffectorSeries"
                                       Title="End Effector"
                                       Values="{Binding EndEffectorPoint}"
                                       Stroke="Red"
                                       StrokeThickness="2"
                                       Fill="Red"
                                       PointGeometry="{x:Static lvc:DefaultGeometries.Circle}"
                                       MaxPointShapeDiameter="12"
                                       MinPointShapeDiameter="12" />
                </lvc:CartesianChart.Series>

                <!-- AXIS -->
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="X (mm)"
                              LabelFormatter="{Binding XFormatter}"
                              MinValue="-350" MaxValue="350">
                        <lvc:Axis.Separator>
                            <lvc:Separator Step="50" StrokeThickness="1" />
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Y (mm)"
                              LabelFormatter="{Binding YFormatter}"
                              MinValue="0" MaxValue="350">
                        <lvc:Axis.Separator>
                            <lvc:Separator Step="50" StrokeThickness="1" />
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>

        <!-- ==================== PANEL KANAN (PIANO CONTROL) ==================== -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="0">
            <GroupBox Header="Piano Control" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <!-- Tombol Kontrol -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <Button x:Name="Start_Piano" Content="Start" Width="75" Margin="0,0,5,0" Click="BtnStartPiano_Click" />
                        <Button x:Name="Pause_Piano" Content="Pause" Width="60" Margin="0,0,5,0" Click="BtnPausePiano_Click" />
                        <Button x:Name="Rewind_Piano" Content="Rewind" Width="60" Click="BtnRewindPiano_Click" />
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Status:" FontWeight="Bold" VerticalAlignment="Center" />
                        <TextBlock x:Name="txtPianoStatus"
                                   Text="Lengan di posisi awal."
                                   Foreground="DarkBlue"
                                   FontStyle="Italic"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- ==================== INITIALIZATION ==================== -->
        <GroupBox Header="Initialization"
                  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                  Margin="0,5,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Parameter a1, a2, a3 -->
                <TextBlock Text="a1" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox x:Name="txtA1" Width="50" Text="120" Grid.Row="0" Grid.Column="1" Margin="0,0,20,0" />

                <TextBlock Text="a2" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox x:Name="txtA2" Width="50" Text="130" Grid.Row="1" Grid.Column="1" Margin="0,0,20,0" />

                <TextBlock Text="a3" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox x:Name="txtA3" Width="50" Text="85" Grid.Row="2" Grid.Column="1" Margin="0,0,20,0" />

                <!-- Konfigurasi titik & waktu -->
                <TextBlock Text="Titik (n)" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox x:Name="txtNPoints" Width="60" Text="25" Grid.Row="0" Grid.Column="3" Margin="0,0,20,0" />

                <TextBlock Text="Waktu (t)" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox x:Name="txtTimeMs" Width="60" Text="1000" Grid.Row="1" Grid.Column="3" Margin="0,0,20,0" />

                <!-- Mode Radio Button -->
                <StackPanel Grid.Row="0" Grid.Column="4" Grid.RowSpan="3"
                            Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,15,0">
                    <RadioButton x:Name="rbTimePath" Content="Time/Path" IsChecked="True" Margin="0,0,0,3" Click="RbTimePath_Click" />
                    <RadioButton x:Name="rbTimeTrack" Content="Time/Track" Click="RbTimeTrack_Click" />
                </StackPanel>

                <!-- Tombol Clear -->
                <Button x:Name="btnClearPath" Content="Clear Path" Width="90"
                        Grid.Row="0" Grid.Column="5" Grid.RowSpan="3"
                        HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"
                        Click="BtnClearPath_Click" />

                <Button x:Name="BtnClaw_Open" Grid.Row="0" Grid.Column="5" Grid.RowSpan="1"
                        Content="Open Claw" Width="100" Click="BtnClaw_Open_Click"/>
                <Button x:Name="BtnClaw_Close" Grid.Row="2" Grid.Column="5" Grid.RowSpan="1"
                        Content="Close Claw" Width="100"  Click="BtnClaw_Close_Click"/>
            </Grid>
        </GroupBox>

        <!-- ==================== ROBOT CONTROL ==================== -->
        <GroupBox Header="Robot AL5A Control"
                  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                  Margin="0,5,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Koneksi Serial -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,15,5">
                    <TextBlock Text="COM Port:" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <ComboBox x:Name="cmbPorts" Width="80" Margin="0,0,5,0" />
                    <Button x:Name="btnConnectRobot" Content="Connect Robot" Width="100" Click="BtnConnectRobot_Click" />
                    <TextBlock x:Name="txtRobotStatus" Text="Disconnected" Foreground="Red"
                               Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" />
                </StackPanel>

                <!-- Kontrol Manual -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,5">
                    <Button x:Name="btnSendToRobot" Content="Send to Robot" Width="100" Margin="0,0,5,0" Click="BtnSendToRobot_Click" />
                    <Button x:Name="btnRobotOrigin" Content="Robot Origin" Width="90" Click="BtnRobotOrigin_Click" />
                </StackPanel>

                <!-- Status & Info -->
                <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Vertical">
                    <TextBlock x:Name="txtNoteInfo" Text="Note ready..." FontSize="10" Foreground="Gray" />
                    <TextBlock x:Name="txtRobotInfo" Text="Robot ready..." FontSize="10" Foreground="Gray" />
                    <TextBlock x:Name="txtLastCommand" Text="Last command: None" FontSize="9" Foreground="DarkBlue" />
                </StackPanel>

                <!-- Servo Info -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Servo Mapping:" FontWeight="Bold" Margin="0,0,5,0" />
                    <TextBlock Text="0:Base(0–180°)" FontSize="10" Margin="0,0,10,0" Foreground="DarkGreen" />
                    <TextBlock Text="2:Link2(-90–90°)" FontSize="10" Margin="0,0,10,0" Foreground="DarkGreen" />
                    <TextBlock Text="3:Link3(-90–90°)" FontSize="10" Margin="0,0,10,0" Foreground="DarkGreen" />
                    <TextBlock Text="Speed: 300" FontSize="10" Foreground="DarkRed" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- ==================== EXIT BUTTON ==================== -->
        <Button x:Name="btnExit"
                Grid.Row="3" Grid.Column="1"
                HorizontalAlignment="Right"
                Width="80" Content="Exit"
                Margin="0,5,0,0"
                Click="BtnExit_Click" />
    </Grid>
</Window>
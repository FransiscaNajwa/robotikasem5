<Window x:Class="Prak4_RNO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sudut" Height="861" Width="963">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Servo baris atas -->
                <RowDefinition Height="Auto"/>
                <!-- Servo 3, COM, Jepit -->
                <RowDefinition Height="Auto"/>
                <!-- Robot Parameter -->
                <RowDefinition Height="*"/>
                <!-- Inverse Kinematic -->
                <RowDefinition Height="Auto"/>
                <!-- Tombol Exit -->
            </Grid.RowDefinitions>

            <!-- === Servo 0 === -->
            <GroupBox Header="Servo 0" Grid.Row="0" Grid.Column="0" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderServo0" Minimum="0" Maximum="180" Value="90"
                            Tag="0" ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Sudut" Width="50"/>
                        <TextBox x:Name="txtSudut0" Width="50" Text="90"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox Width="60" Text="780"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox Width="60" Text="2360"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtInterp0" Width="60" Text="1570"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- === Servo 1 === -->
            <GroupBox Header="Servo 1" Grid.Row="0" Grid.Column="1" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderServo1" Minimum="0" Maximum="180" Value="0"
                            Tag="1" ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Sudut" Width="50"/>
                        <TextBox x:Name="txtSudut1" Width="50" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox Width="60" Text="540"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox Width="60" Text="2427"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtInterp1" Width="60" Text="1483"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- === Servo 2 === -->
            <GroupBox Header="Servo 2" Grid.Row="0" Grid.Column="2" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderServo2" Minimum="-90" Maximum="90" Value="0"
                            Tag="2" ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Sudut" Width="50"/>
                        <TextBox x:Name="txtSudut2" Width="50" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox Width="60" Text="540"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox Width="60" Text="2427"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtInterp2" Width="60" Text="1483"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- === Servo 3 === -->
            <GroupBox Header="Servo 3" Grid.Row="1" Grid.Column="0" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderServo3" Minimum="-90" Maximum="90" Value="0"
                            Tag="3" ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Sudut" Width="50"/>
                        <TextBox x:Name="txtSudut3" Width="50" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox Width="60" Text="770"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox Width="60" Text="2220"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtInterp3" Width="60" Text="1550"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- === COM PORT === -->
            <GroupBox Header="COM Port" Grid.Row="1" Grid.Column="1" Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Port" Width="50"/>
                        <ComboBox x:Name="cmbPorts" Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Button x:Name="btnConnect" Content="Connect" Width="100" Click="BtnConnect_Click"/>
                        <Button Content="Close Port" Width="100" Margin="5,0,0,0" Click="BtnClose_Click"/>
                    </StackPanel>
                    <Button x:Name="btnOrigin" Content="Origin Position" Height="40" Width="200" Margin="0,5" Click="BtnOrigin_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- === Jepit === -->
            <GroupBox Header="Jepit" Grid.Row="1" Grid.Column="2" Margin="5">
                <StackPanel>
                    <Slider x:Name="sliderClaw" Minimum="0" Maximum="200" Value="140" Tag="4" ValueChanged="SliderControl_ValueChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="mm" Width="50"/>
                        <TextBox x:Name="txtClawMM" Width="50" Text="140"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Min" Width="50"/>
                        <TextBox x:Name="txtClawMin" Width="60" Text="2200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Maks" Width="50"/>
                        <TextBox x:Name="txtClawMax" Width="60" Text="770"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <Label Content="Interpolasi" Width="70"/>
                        <TextBox x:Name="txtClawInterp" Width="60" Text="1583"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Button x:Name="BtnClaw_Open" Content="Open Claw" Width="100" Click="BtnClaw_Open_Click"/>
                        <Button x:Name="BtnClaw_Close" Content="Close Claw" Width="100" Margin="5,0,0,0" Click="BtnClaw_Close_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- === Robot Parameter === -->
            <GroupBox Header="Robot Parameter" Grid.Row="2" Grid.ColumnSpan="3" Margin="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="a1" Width="40"/>
                            <TextBox x:Name="m_a1" Width="50" Text="110"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="a2" Width="40"/>
                            <TextBox x:Name="m_a2" Width="50" Text="120"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="a3" Width="40"/>
                            <TextBox x:Name="m_a3" Width="50" Text="70"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="10">
                        <Label Content="Forward Kinematic Result" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Qx" Width="40"/>
                            <TextBox x:Name="m_qx" Width="80" Text="0.238898" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Qy" Width="40"/>
                            <TextBox x:Name="m_qy" Width="80" Text="300" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Orientasi" Width="60"/>
                            <TextBox x:Name="m_orientasi" Width="80" Text="0" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- === Inverse Kinematic === -->
            <GroupBox Header="Inverse Kinematic" Grid.Row="3" Grid.ColumnSpan="3" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Solusi 1 -->
                    <StackPanel Grid.Column="0" Margin="5">
                        <Label Content="Solusi 1" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 1" Width="50"/>
                            <TextBox x:Name="m_satu" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 2" Width="50"/>
                            <TextBox x:Name="m_dua" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 3" Width="50"/>
                            <TextBox x:Name="m_tiga" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Button x:Name="cal_inv1" Content="Calculate" Width="80" Click="cal_inv1_Click" />
                            <Button x:Name="run_inv1" Content="Run" Width="80" Margin="5,0,0,0" Click="run_inv1_Click" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Solusi 2 -->
                    <StackPanel Grid.Column="1" Margin="5">
                        <Label Content="Solusi 2" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 1" Width="50"/>
                            <TextBox x:Name="m_satu2" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 2" Width="50"/>
                            <TextBox x:Name="m_dua2" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Label Content="Teta 3" Width="50"/>
                            <TextBox x:Name="m_tiga2" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Button x:Name="cal_inv2" Content="Calculate" Width="80" Click="cal_inv2_Click"/>
                            <Button x:Name="run_inv2" Content="Run" Width="80" Margin="5,0,0,0" Click="run_inv2_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- === Exit Cancel === -->
            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="5">
                <Button Content="Exit" Width="80" Margin="5"/>
                <Button Content="Cancel" Width="80" Margin="5"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
